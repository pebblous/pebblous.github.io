@prefix iso: <http://pebblous.ai/ontology/iso-standard#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

<http://pebblous.ai/ontology/iso-standard> a owl:Ontology ;
    rdfs:label "ISO 표준 문서 메타 온톨로지"@ko ,
               "ISO Standard Document Meta-Ontology"@en ;
    rdfs:comment "ISO/IEC 표준 문서의 구조와 개념을 표현하는 온톨로지"@ko ,
                 "Ontology for representing structure and concepts of ISO/IEC standard documents"@en ;
    owl:versionInfo "1.0.0" .

# ============================================================================
# Document Structure Classes (문서 구조 클래스)
# ============================================================================

iso:StandardDocument a owl:Class ;
    rdfs:label "표준 문서"@ko , "Standard Document"@en ;
    rdfs:comment "ISO/IEC 표준 문서"@ko , "ISO/IEC standard document"@en .

iso:Section a owl:Class ;
    rdfs:label "섹션"@ko , "Section"@en ;
    rdfs:comment "표준 문서의 섹션 (1, 2, 3, ...)"@ko ,
                 "Section of standard document (1, 2, 3, ...)"@en .

iso:Clause a owl:Class ;
    rdfs:label "조항"@ko , "Clause"@en ;
    rdfs:subClassOf iso:Section ;
    rdfs:comment "번호가 매겨진 조항"@ko , "Numbered clause"@en .

iso:Subclause a owl:Class ;
    rdfs:label "하위조항"@ko , "Subclause"@en ;
    rdfs:subClassOf iso:Section ;
    rdfs:comment "하위 조항 (예: 5.1, 5.2.1)"@ko ,
                 "Subclause (e.g., 5.1, 5.2.1)"@en .

iso:Annex a owl:Class ;
    rdfs:label "부속서"@ko , "Annex"@en ;
    rdfs:subClassOf iso:Section ;
    rdfs:comment "부속서 (Annex A, B, C, ...)"@ko ,
                 "Annex (Annex A, B, C, ...)"@en .

iso:NormativeAnnex a owl:Class ;
    rdfs:label "규정 부속서"@ko , "Normative Annex"@en ;
    rdfs:subClassOf iso:Annex ;
    rdfs:comment "규정을 포함하는 부속서"@ko ,
                 "Annex containing normative content"@en .

iso:InformativeAnnex a owl:Class ;
    rdfs:label "참고 부속서"@ko , "Informative Annex"@en ;
    rdfs:subClassOf iso:Annex ;
    rdfs:comment "참고 정보를 포함하는 부속서"@ko ,
                 "Annex containing informative content"@en .

# ============================================================================
# Concept Type Classes (개념 유형 클래스)
# ============================================================================

iso:Concept a owl:Class ;
    rdfs:label "개념"@ko , "Concept"@en ;
    rdfs:comment "표준 문서에서 정의되는 개념"@ko ,
                 "Concept defined in standard document"@en .

iso:Definition a owl:Class ;
    rdfs:label "정의"@ko , "Definition"@en ;
    rdfs:subClassOf iso:Concept ;
    rdfs:comment "용어 정의 (주로 3장에 위치)"@ko ,
                 "Term definition (usually in clause 3)"@en .

iso:Requirement a owl:Class ;
    rdfs:label "요구사항"@ko , "Requirement"@en ;
    rdfs:subClassOf iso:Concept ;
    rdfs:comment "규정 요구사항 ('shall' 사용)"@ko ,
                 "Normative requirement (uses 'shall')"@en .

iso:Recommendation a owl:Class ;
    rdfs:label "권고사항"@ko , "Recommendation"@en ;
    rdfs:subClassOf iso:Concept ;
    rdfs:comment "권고사항 ('should' 사용)"@ko ,
                 "Recommendation (uses 'should')"@en .

iso:Permission a owl:Class ;
    rdfs:label "허용사항"@ko , "Permission"@en ;
    rdfs:subClassOf iso:Concept ;
    rdfs:comment "허용사항 ('may' 사용)"@ko ,
                 "Permission (uses 'may')"@en .

iso:Example a owl:Class ;
    rdfs:label "예시"@ko , "Example"@en ;
    rdfs:subClassOf iso:Concept ;
    rdfs:comment "개념 설명을 위한 예시"@ko ,
                 "Example to illustrate concept"@en .

iso:Note a owl:Class ;
    rdfs:label "비고"@ko , "Note"@en ;
    rdfs:subClassOf iso:Concept ;
    rdfs:comment "추가 설명 또는 주의사항"@ko ,
                 "Additional explanation or caution"@en .

iso:Figure a owl:Class ;
    rdfs:label "그림"@ko , "Figure"@en ;
    rdfs:comment "도표 또는 그림"@ko , "Diagram or figure"@en .

iso:Table a owl:Class ;
    rdfs:label "표"@ko , "Table"@en ;
    rdfs:comment "데이터 표"@ko , "Data table"@en .

# ============================================================================
# Object Properties (객체 속성)
# ============================================================================

iso:hasSection a owl:ObjectProperty ;
    rdfs:label "섹션 포함"@ko , "has section"@en ;
    rdfs:domain iso:StandardDocument ;
    rdfs:range iso:Section ;
    rdfs:comment "문서가 포함하는 섹션"@ko ,
                 "Section contained in document"@en .

iso:hasSubsection a owl:ObjectProperty ;
    rdfs:label "하위섹션 포함"@ko , "has subsection"@en ;
    rdfs:domain iso:Section ;
    rdfs:range iso:Section ;
    rdfs:comment "섹션이 포함하는 하위섹션"@ko ,
                 "Subsection contained in section"@en .

iso:defines a owl:ObjectProperty ;
    rdfs:label "정의함"@ko , "defines"@en ;
    rdfs:domain iso:Section ;
    rdfs:range iso:Concept ;
    rdfs:comment "섹션에서 정의하는 개념"@ko ,
                 "Concept defined in section"@en .

iso:references a owl:ObjectProperty ;
    rdfs:label "참조함"@ko , "references"@en ;
    rdfs:comment "다른 섹션 또는 개념을 참조"@ko ,
                 "References another section or concept"@en .

iso:illustratedBy a owl:ObjectProperty ;
    rdfs:label "설명됨"@ko , "illustrated by"@en ;
    rdfs:domain iso:Concept ;
    rdfs:range [ owl:unionOf (iso:Example iso:Figure iso:Table) ] ;
    rdfs:comment "개념을 설명하는 예시/그림/표"@ko ,
                 "Example/figure/table illustrating concept"@en .

iso:requires a owl:ObjectProperty ;
    rdfs:label "요구함"@ko , "requires"@en ;
    rdfs:domain iso:Requirement ;
    rdfs:range iso:Concept ;
    rdfs:comment "요구사항이 참조하는 개념"@ko ,
                 "Concept required by requirement"@en .

# ============================================================================
# Data Properties (데이터 속성)
# ============================================================================

iso:sectionNumber a owl:DatatypeProperty ;
    rdfs:label "섹션 번호"@ko , "section number"@en ;
    rdfs:domain iso:Section ;
    rdfs:range xsd:string ;
    rdfs:comment "섹션 번호 (예: '5.2.1', 'Annex B')"@ko ,
                 "Section number (e.g., '5.2.1', 'Annex B')"@en .

iso:pageNumber a owl:DatatypeProperty ;
    rdfs:label "페이지 번호"@ko , "page number"@en ;
    rdfs:range xsd:integer ;
    rdfs:comment "PDF 페이지 번호"@ko , "PDF page number"@en .

iso:standardNumber a owl:DatatypeProperty ;
    rdfs:label "표준 번호"@ko , "standard number"@en ;
    rdfs:domain iso:StandardDocument ;
    rdfs:range xsd:string ;
    rdfs:comment "ISO 표준 번호 (예: 'ISO/IEC 5259-2:2024')"@ko ,
                 "ISO standard number (e.g., 'ISO/IEC 5259-2:2024')"@en .

iso:publicationDate a owl:DatatypeProperty ;
    rdfs:label "발행일"@ko , "publication date"@en ;
    rdfs:domain iso:StandardDocument ;
    rdfs:range xsd:date ;
    rdfs:comment "표준 발행 날짜"@ko , "Standard publication date"@en .

iso:isNormative a owl:DatatypeProperty ;
    rdfs:label "규정 여부"@ko , "is normative"@en ;
    rdfs:range xsd:boolean ;
    rdfs:comment "규정(normative) 내용 여부"@ko ,
                 "Whether content is normative"@en .

# ============================================================================
# Named Individuals - Common Sections (공통 섹션 개체)
# ============================================================================

iso:ScopeSection a iso:Section , owl:NamedIndividual ;
    rdfs:label "적용 범위"@ko , "Scope"@en ;
    iso:sectionNumber "1" ;
    rdfs:comment "표준의 적용 범위를 설명하는 1장"@ko ,
                 "Clause 1 describing scope of standard"@en .

iso:NormativeReferencesSection a iso:Section , owl:NamedIndividual ;
    rdfs:label "인용 표준"@ko , "Normative References"@en ;
    iso:sectionNumber "2" ;
    rdfs:comment "참조되는 다른 표준을 나열하는 2장"@ko ,
                 "Clause 2 listing referenced standards"@en .

iso:TermsAndDefinitionsSection a iso:Section , owl:NamedIndividual ;
    rdfs:label "용어 및 정의"@ko , "Terms and Definitions"@en ;
    iso:sectionNumber "3" ;
    rdfs:comment "용어를 정의하는 3장"@ko ,
                 "Clause 3 defining terms"@en .

# ============================================================================
# Annotations (주석)
# ============================================================================

# Best practices for using this ontology
iso:BestPractices a owl:AnnotationProperty ;
    rdfs:label "사용 권장사항"@ko , "Best Practices"@en ;
    rdfs:comment """
이 온톨로지 사용 시 권장사항:

1. 문서 구조 표현:
   - StandardDocument는 최상위 개체
   - hasSection으로 주요 섹션 연결
   - hasSubsection으로 계층 구조 표현

2. 개념 표현:
   - Definition은 주로 3장(Terms and Definitions)에 위치
   - Requirement는 'shall' 문구가 있는 규정
   - Note와 Example은 보조 설명

3. 페이지 참조:
   - pageNumber 속성으로 PDF 위치 명시
   - 독자가 빠르게 찾을 수 있도록 지원

4. 다층 온톨로지 구축:
   - 문서 구조 온톨로지 (이 파일)
   - 도메인 온톨로지 (예: 데이터 품질)
   - 개념 관계 온톨로지 (SKOS 활용)
"""@ko .
